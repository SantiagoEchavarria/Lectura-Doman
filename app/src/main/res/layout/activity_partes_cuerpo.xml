<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PartesCuerpo">

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="285dp"
        android:layout_height="367dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="191dp"
        android:contentDescription="@string/leon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/r1"
        android:layout_width="287dp"
        android:layout_height="48dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="61dp"
        android:onClick="respuesta1"
        android:text="Nariz"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/r2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton3" />

    <TextView
        android:id="@+id/r2"
        android:layout_width="287dp"
        android:layout_height="48dp"
        android:layout_marginStart="63dp"
        android:layout_marginEnd="61dp"
        android:onClick="respuesta2"
        android:text="Mano"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/r3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/r1" />

    <TextView
        android:id="@+id/r3"
        android:layout_width="287dp"
        android:layout_height="48dp"
        android:layout_marginStart="63dp"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="21dp"
        android:onClick="respuesta3"
        android:text="Mama"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnnext2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/r2" />

    <ImageButton
        android:id="@+id/btnnext2"
        android:layout_width="60dp"
        android:layout_height="49dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="50dp"
        android:onClick="setRespuestas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt2"
        app:layout_constraintTop_toBottomOf="@+id/r3"
        app:srcCompat="@android:drawable/ic_media_next" />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="262dp"
        android:layout_height="94dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="21dp"
        android:layout_marginBottom="37dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnnext2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/r3" />

</androidx.constraintlayout.widget.ConstraintLayout>