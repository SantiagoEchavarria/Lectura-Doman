<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Numeros">

    <TextView
        android:id="@+id/txtLeon13"
        android:layout_width="103dp"
        android:layout_height="48dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="416dp"
        android:onClick="respuesta1"
        android:text="Leon"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/txtLima13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtLima13"
        android:layout_width="128dp"
        android:layout_height="48dp"
        android:layout_marginTop="416dp"
        android:onClick="respuesta2"
        android:text="Lima"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/txtLoma13"
        app:layout_constraintStart_toEndOf="@+id/txtLeon13"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtLoma13"
        android:layout_width="124dp"
        android:layout_height="48dp"
        android:layout_marginTop="416dp"
        android:layout_marginEnd="22dp"
        android:onClick="respuesta3"
        android:text="Loma"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtLima13"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnnext15"
        android:layout_width="60dp"
        android:layout_height="49dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="182dp"
        android:onClick="setRespuestas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt15"
        app:layout_constraintTop_toBottomOf="@+id/txtLoma13"
        app:srcCompat="@android:drawable/ic_media_next"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/txt15"
        android:layout_width="262dp"
        android:layout_height="94dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="137dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnnext15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLeon13" />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="146dp"
        android:layout_marginBottom="397dp"
        android:text="1"
        android:textSize="200sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>